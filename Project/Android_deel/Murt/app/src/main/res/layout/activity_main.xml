<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/grid_button"
        android:id="@+id/gridButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/openImageButtonText"
        android:id="@+id/openImageButton"
        android:layout_alignRight="@+id/gridButton"
        android:layout_below="@+id/gridButton"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/prepare"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/rotateButton"
        android:layout_alignParentLeft="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotate splitted images"
        android:id="@+id/rotateButton"
        android:layout_below="@+id/showOriginalButton"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show original"
        android:id="@+id/showOriginalButton"
        android:layout_below="@+id/openImageButton"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
