<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/grid_button"
        android:id="@+id/gridButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/openImageButtonText"
        android:id="@+id/openImageButton"
        android:layout_alignTop="@+id/fullscreenButton"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/showOriginalButton"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/prepare"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/openImageButton"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show original"
        android:id="@+id/showOriginalButton"
        android:layout_below="@+id/gridButton"
        android:layout_alignRight="@+id/gridButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fullscreen"
        android:id="@+id/fullscreenButton"
        android:layout_alignTop="@+id/showOriginalButton"
        android:layout_toRightOf="@+id/showOriginalButton"
        android:layout_alignParentRight="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Master"
        android:id="@+id/masterButton"
        android:layout_alignTop="@+id/gridButton"
        android:layout_alignParentLeft="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client"
        android:id="@+id/clientButton"
        android:layout_alignTop="@+id/gridButton"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
